<form action="/login" method="post">
<fieldset>    
    <legend>Login</legend>
    <div class='clearfix'>
        <label>Username</label>
        <div class='input'>
            <input type='text' name='username' />
        </div>
    </div>

    <div class='clearfix'>
        <label>Password</label>
        <div class='input'>
            <input type='password' name='password' />
        </div>
    </div>

    <div class='clearfix'>
        <div class='input'>
            <input type='submit' name='submit' />
        </div>
    </div>

</fieldset>
</form>
